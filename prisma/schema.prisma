// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         String    @id @default(uuid())
  username   String    @unique
  password   String
  accessType Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
}

model Customers {
  id       String     @id @default(uuid())
  name     String
  cnpj     String     @unique
  initials String
  Products Products[]
}

model Employees {
  id        String     @id @default(uuid())
  name      String
  cpf       String
  birthDate DateTime
  active    Boolean
  Payrolls  Payrolls[]
}

model Expenses {
  id          String   @id @default(uuid())
  name        String
  description String?
  value       Decimal
  date        DateTime
}

model Payrolls {
  id              String    @id @default(uuid())
  salary          Decimal
  attendanceAward Decimal
  productionAward Decimal
  overtime        Decimal
  salaryToBePaid  Decimal
  date            DateTime
  idEmployee      String
  employee        Employees @relation(fields: [idEmployee], references: [id])
}

model Products {
  id             String    @id @default(uuid())
  reference      String
  of             String
  description    String?
  quantity       Decimal
  unitaryValue   Decimal
  amount         Decimal
  status         Int
  image          String?
  completionDate DateTime?
  idCustomer     String
  customer       Customers @relation(fields: [idCustomer], references: [id])
}